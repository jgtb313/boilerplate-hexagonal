datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  status    UserStatus @default(ACTIVE)
  deletedAt DateTime?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum UserStatus {
  ACTIVE
  INACTIVE
  DELETED
}
